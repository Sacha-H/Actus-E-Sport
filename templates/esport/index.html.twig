{% extends 'base.html.twig' %}

{% block title %}Esport index{% endblock %}

{% block body %}
<section class="index container-fluid">
    <h1>Les Jeux</h1>
{% if (is_granted('ROLE_ADMIN')) %}
    <h2>Admin</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEsport</th>
                <th>PhotoEsport</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for esport in esports %}
            <tr>
                <td>{{ esport.id }}</td>
                <td>{{ esport.nomEsport }}</td>
                <td><img src="{{ asset('uploads/photos/' ~ esport.photoEsport) }}" width="100"></td>
                <td>
                    <a href="{{ path('esport_show', {'id': esport.id}) }}">show</a>
                    <a href="{{ path('esport_edit', {'id': esport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('esport_new') }}">Create new</a>
    {% endif %}
    <section class="jeux row">

			{% for esport in esports %}
				<div class='col-md-6 affichage-jeux'>
					<h5><a href="{{ path('esport_show', {'id': esport.id}) }}">
						{{ esport.nomEsport }}
					
					
						<img src="{{ asset('uploads/photos/' ~ esport.photoEsport) }}" width="200">
					</a></h5>
				</div>
			{% endfor %}


		</section>
        </section>
{% endblock %}
